{
  "kafka": {
    "bootstrap_servers": "kafka:9092",
    "topic": "data-topic",
    "compression_type": "snappy"
  },
  "producer": {
    "interval_ms": 36,
    "batch_size": 100,
    "max_retries": 3,
    "initial_retry_delay_ms": 3000
  },
  "logging": {
    "level": "INFO",
    "format": "json"
  },
  "metrics": {
    "enabled": true,
    "port": 8000
  }
}
